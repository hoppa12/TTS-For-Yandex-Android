{
  "manifest_version": 2,

  "name": "Simple TTS",
  "description": "Simple Page TTS",
  "version": "0.1",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["ttsBelowMouse.js"]
    }
  ],
  "permissions": [
    "tabs", "http://*/*", "https://*/", "activeTab"
  ],

  
  "browser_action": {
    "default_title": "Simple TTS Extension",
    "default_icon": {
      "19": "img/sub19.png",
      "38": "img/sub38.png",
      "128": "img/sub128.png"
    }
  }
}
